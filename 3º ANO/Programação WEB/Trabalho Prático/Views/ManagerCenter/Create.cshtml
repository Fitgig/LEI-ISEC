@model PWEB_2324.ViewModels.UserFormViewModel

@{
    ViewData["Title"] = "Criar categoria";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Criar Registo de utilizador</h1>

<h4>Dados do Utilizador</h4>
<hr style="border: solid dodgerblue" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label fw-bold"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label fw-bold"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-success" /> |
                <a class="btn btn-primary" asp-action="Index">Voltar à Listagem</a>
            </div>
            <br />
        </form>


    </div>
</div>



