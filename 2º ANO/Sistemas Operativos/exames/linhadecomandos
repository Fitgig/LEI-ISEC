Exame Época Especial 22/23

1. ls -l /tmp | grep ^p | tr -s " " | cut -d " " -f5,9 | sort -k1 -n | tail -4 | head -3

2. cat /etc/passwd | cut -d ":" -f1,3,5 | grep -E ^[aeiouAEIOU] | sort -t ":" -k2 -n | tail -3 | cut -d ":" -f3 | sort -n > ~/ultimos.txt

