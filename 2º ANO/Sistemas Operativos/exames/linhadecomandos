Exame Exemplo (inforestudante)

4. ls -l ~ | grep -E "^p" | tr -s " " | cut -d " " -f9 ! xargs rm

5. ls -l /tmp | tr -s " " | grep -E "\.txt" | grep "antonio" | cut -d " " -f3,5,9 | sort -k2 -n | cut -d " " -f3 > ~/resultado.txt
